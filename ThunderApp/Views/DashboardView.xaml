<UserControl x:Class="ThunderApp.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf">

    <UserControl.Resources>
        <!-- Dashboard toolbar buttons -->
        <Style x:Key="DashActionButton" TargetType="Button">
            <Setter Property="Height" Value="38" />
            <Setter Property="MinWidth" Value="120" />
            <Setter Property="Padding" Value="14,0" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{DynamicResource Text}" />
            <Setter Property="Background" Value="{DynamicResource Surface2}" />
            <Setter Property="BorderBrush" Value="{DynamicResource Border}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#16233A" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#0D1526" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle buttons with obvious ON/OFF -->
        <Style x:Key="DashToggleButton" TargetType="ToggleButton">
            <Setter Property="Height" Value="38" />
            <Setter Property="MinWidth" Value="120" />
            <Setter Property="Padding" Value="14,0" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{DynamicResource Text}" />
            <Setter Property="Background" Value="{DynamicResource Surface2}" />
            <Setter Property="BorderBrush" Value="{DynamicResource Border}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <Grid>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                <!-- tiny status dot -->
                                <Ellipse x:Name="Dot"
                                         Width="8" Height="8"
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Center"
                                         Margin="0,0,12,0"
                                         Fill="#55627A" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>

                            <!-- OFF (default) -->
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource Surface2}" />
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource Border}" />
                                <Setter TargetName="Dot" Property="Fill" Value="#55627A" />
                            </Trigger>

                            <!-- ON -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource Accent2}" />
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource Accent2}" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter TargetName="Dot" Property="Fill" Value="White" />
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#16233A" />
                            </Trigger>

                            <!-- Keep ON state dominant on hover -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True" />
                                    <Condition Property="IsChecked" Value="True" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource Accent}" />
                            </MultiTrigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55" />
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Height" Value="36" />
            <Setter Property="Padding" Value="14,0" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <Style TargetType="ToggleButton">
            <Setter Property="Height" Value="36" />
            <Setter Property="Padding" Value="14,0" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <Style x:Key="DashCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource Surface}" />
            <Setter Property="BorderBrush" Value="{DynamicResource Border}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="14" />
        </Style>

        <Style x:Key="DashHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{DynamicResource Text}" />
        </Style>

        <Style x:Key="DashMuted" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource Muted}" />
        </Style>

        <Style TargetType="ListView">
            <Setter Property="Background" Value="{DynamicResource Surface}" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

    </UserControl.Resources>

    <Grid Background="Transparent">

        <!-- Layout: Filters | Alerts + Map -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="12" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- ================= LEFT COLUMN (Filters) ================= -->

        <Border Grid.Column="0" Style="{StaticResource DashCard}">
            <StackPanel>

                <TextBlock Style="{StaticResource DashHeader}"
                           Text="Alert Filters"
                           Margin="0,0,0,10" />

                <CheckBox Content="Use GPS Location"
                          Foreground="{DynamicResource Text}"
                          IsChecked="{Binding FilterSettings.UseNearMe}"
                          Margin="0,0,0,10" />

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="ManualLatTextBox"
                             Grid.Column="0"
                             ToolTip="Latitude"
                             Text="{Binding FilterSettings.ManualLat}" />

                    <TextBox x:Name="ManualLonTextBox"
                             Grid.Column="2"
                             ToolTip="Longitude"
                             Text="{Binding FilterSettings.ManualLon}" />
                </Grid>

                <Separator Margin="0,0,0,12" />

                <TextBlock Text="Severity"
                           FontWeight="SemiBold"
                           Margin="0,0,0,6" />

                <WrapPanel>
                    <CheckBox Content="Extreme" Foreground="{DynamicResource Text}"
                              IsChecked="{Binding FilterSettings.ShowExtreme}" Margin="0,0,12,6" />
                    <CheckBox Content="Severe" Foreground="{DynamicResource Text}"
                              IsChecked="{Binding FilterSettings.ShowSevere}" Margin="0,0,12,6" />
                    <CheckBox Content="Moderate" Foreground="{DynamicResource Text}"
                              IsChecked="{Binding FilterSettings.ShowModerate}" Margin="0,0,12,6" />
                    <CheckBox Content="Minor" Foreground="{DynamicResource Text}"
                              IsChecked="{Binding FilterSettings.ShowMinor}" Margin="0,0,12,6" />
                    <CheckBox Content="Unknown" Foreground="{DynamicResource Text}"
                              IsChecked="{Binding FilterSettings.ShowUnknown}" Margin="0,0,12,6" />
                </WrapPanel>

                <Separator Margin="0,12,0,12" />

                <UniformGrid Columns="2" Rows="3" Margin="0,8,0,0">

                    <Button Content="Refresh"
                            Style="{StaticResource DashActionButton}"
                            Command="{Binding RefreshCommand}"
                            Margin="0,0,8,8"/>

                    <Button Content="Update Map"
                            Style="{StaticResource DashActionButton}"
                            Click="UpdateMap_OnClick"
                            Margin="0,0,0,8"/>

                    <ToggleButton x:Name="FollowToggle"
                                  Content="Follow"
                                  Style="{StaticResource DashToggleButton}"
                                  IsChecked="True"
                                  Checked="FollowToggle_Checked"
                                  Unchecked="FollowToggle_Unchecked"
                                  Margin="0,0,8,8"/>

                    <Button Content="Clear Trail"
                            Style="{StaticResource DashActionButton}"
                            Click="ClearTrail_OnClick"
                            Margin="0,0,0,8"/>

                    <Button Content="Save"
                            Style="{StaticResource DashActionButton}"
                            Command="{Binding SaveFiltersCommand}"
                            Margin="0,0,8,0"/>

                    <ToggleButton x:Name="RadarToggle"
                                  Content="Radar"
                                  Style="{StaticResource DashToggleButton}"
                                  IsChecked="False"
                                  Checked="Radar_Checked"
                                  Unchecked="Radar_Unchecked"
                                  Margin="0,0,0,0"/>
                </UniformGrid>

                <TextBlock Style="{StaticResource DashMuted}"
                           Text="{Binding StatusText}"
                           Margin="0,12,0,0" />
            </StackPanel>
        </Border>

        <!-- ================= RIGHT COLUMN (Alerts + Map) ================= -->

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="12" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- ===== Alerts ===== -->
            <Border Grid.Row="0" Style="{StaticResource DashCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" LastChildFill="False">
                        <TextBlock Style="{StaticResource DashHeader}"
                                   Text="Active Alerts"
                                   DockPanel.Dock="Left" />

                        <TextBlock Style="{StaticResource DashMuted}"
                                   DockPanel.Dock="Right"
                                   VerticalAlignment="Bottom"
                                   Text="{Binding Alerts.Count, StringFormat={}{0} total}" />
                    </DockPanel>

                    <ListView Grid.Row="2"
                              ItemsSource="{Binding AlertsView}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource Surface2}"
                                        BorderBrush="{DynamicResource Border}"
                                        BorderThickness="1"
                                        CornerRadius="10"
                                        Padding="12"
                                        Margin="0,0,0,10">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Event}"
                                                   FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding Headline}"
                                                   Foreground="{DynamicResource Muted}"
                                                   Margin="0,4,0,6"
                                                   TextWrapping="Wrap" />
                                        <TextBlock Text="{Binding AreaDesc}"
                                                   Foreground="{DynamicResource Muted}"
                                                   FontSize="12" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <!-- ===== Map ===== -->
            <Border Grid.Row="2"
                    Style="{StaticResource DashCard}"
                    Padding="0">
                <wv2:WebView2 x:Name="MapView" />
            </Border>

        </Grid>

    </Grid>
</UserControl>