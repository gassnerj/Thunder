<UserControl x:Class="ThunderApp.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:conv="clr-namespace:ThunderApp.Converters">

    <UserControl.Resources>
        <conv:SeverityToBrushConverter x:Key="SeverityToBrush" />
        <BooleanToVisibilityConverter x:Key="BoolToVis" />

        <Style x:Key="WfSwitch" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource Text}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <ContentPresenter VerticalAlignment="Center" />

                            <Border x:Name="Track" Grid.Column="1"
                                    Width="44" Height="24"
                                    CornerRadius="12"
                                    Background="#3A4355"
                                    Margin="10,0,0,0">
                                <Ellipse x:Name="Knob"
                                         Width="18" Height="18"
                                         Fill="White"
                                         HorizontalAlignment="Left"
                                         Margin="3,0,0,0"
                                         VerticalAlignment="Center" />
                            </Border>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="{DynamicResource Accent2}" />
                                <Setter TargetName="Knob" Property="HorizontalAlignment" Value="Right" />
                                <Setter TargetName="Knob" Property="Margin" Value="0,0,3,0" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="WfCategoryExpander" TargetType="Expander">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Expander">
                        <StackPanel>
                            <!-- Header pill -->
                            <ToggleButton x:Name="HeaderSite"
                                          IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                          Background="{DynamicResource Surface2}"
                                          BorderBrush="{DynamicResource Border}"
                                          BorderThickness="1"
                                          Padding="10,8"
                                          Cursor="Hand">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <ContentPresenter VerticalAlignment="Center"
                                                                  RecognizesAccessKey="True" />

                                                <!-- small chevron (no white circle) -->
                                                <Path x:Name="Chevron"
                                                      Grid.Column="1"
                                                      Margin="10,0,2,0"
                                                      VerticalAlignment="Center"
                                                      Fill="{DynamicResource Muted}"
                                                      Data="M 0 0 L 6 6 L 12 0"
                                                      RenderTransformOrigin="0.5,0.5">
                                                    <Path.RenderTransform>
                                                        <RotateTransform Angle="0" />
                                                    </Path.RenderTransform>
                                                </Path>
                                            </Grid>
                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#16233A" />
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource Accent2}" />
                                                <Setter Property="BorderBrush" Value="{DynamicResource Accent2}" />
                                                <Setter Property="Foreground" Value="White" />
                                                <Setter TargetName="Chevron" Property="Fill" Value="White" />
                                                <Setter TargetName="Chevron" Property="RenderTransform">
                                                    <Setter.Value>
                                                        <RotateTransform Angle="180" />
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>

                                <!-- What shows in the pill -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!-- small dot like WF -->
                                    <Ellipse Width="8" Height="8"
                                             VerticalAlignment="Center"
                                             Fill="{DynamicResource Accent}"
                                             Margin="0,0,10,0" />

                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Category}"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center" />
                                </Grid>
                            </ToggleButton>

                            <!-- Content -->
                            <Border x:Name="ContentSite"
                                    Margin="0,8,0,12"
                                    Background="{DynamicResource Surface2}"
                                    BorderBrush="{DynamicResource Border}"
                                    BorderThickness="1"
                                    CornerRadius="12"
                                    Padding="12"
                                    Visibility="Collapsed">
                                <ContentPresenter />
                            </Border>
                        </StackPanel>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="True">
                                <Setter TargetName="ContentSite" Property="Visibility" Value="Visible" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ================= Scrollbars (thin + modern, VERTICAL ONLY) ================= -->
        <Style x:Key="ThinScrollBar" TargetType="{x:Type ScrollBar}">
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Style.Triggers>

                <!-- Only restyle VERTICAL scrollbars -->
                <Trigger Property="Orientation" Value="Vertical">
                    <Setter Property="Width" Value="10" />
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ScrollBar}">
                                <Grid Margin="2" Background="Transparent">
                                    <Track x:Name="PART_Track" IsDirectionReversed="True">
                                        <Track.DecreaseRepeatButton>
                                            <RepeatButton Command="ScrollBar.LineUpCommand"
                                                          Focusable="False"
                                                          IsTabStop="False"
                                                          Opacity="0" />
                                        </Track.DecreaseRepeatButton>

                                        <Track.Thumb>
                                            <Thumb Focusable="False">
                                                <Thumb.Template>
                                                    <ControlTemplate TargetType="Thumb">
                                                        <Border CornerRadius="6"
                                                                Background="#445066" />
                                                    </ControlTemplate>
                                                </Thumb.Template>
                                            </Thumb>
                                        </Track.Thumb>

                                        <Track.IncreaseRepeatButton>
                                            <RepeatButton Command="ScrollBar.LineDownCommand"
                                                          Focusable="False"
                                                          IsTabStop="False"
                                                          Opacity="0" />
                                        </Track.IncreaseRepeatButton>
                                    </Track>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>

                <!-- Horizontal: DISABLE completely (prevents the weird blue line & dots) -->
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Height" Value="0" />
                    <Setter Property="Opacity" Value="0" />
                    <Setter Property="IsHitTestVisible" Value="False" />
                    <Setter Property="Focusable" Value="False" />
                </Trigger>

            </Style.Triggers>
        </Style>

        <!-- REMOVE the global ScrollViewer style that can bleed into other controls -->
        <!-- (Intentionally no unkeyed ScrollViewer style here) -->

        <!-- Dashboard toolbar buttons -->
        <Style x:Key="DashActionButton" TargetType="Button">
            <Setter Property="Height" Value="38" />
            <Setter Property="MinWidth" Value="120" />
            <Setter Property="Padding" Value="14,0" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{DynamicResource Text}" />
            <Setter Property="Background" Value="{DynamicResource Surface2}" />
            <Setter Property="BorderBrush" Value="{DynamicResource Border}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#16233A" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#0D1526" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle buttons with obvious ON/OFF -->
        <Style x:Key="DashToggleButton" TargetType="ToggleButton">
            <Setter Property="Height" Value="38" />
            <Setter Property="MinWidth" Value="120" />
            <Setter Property="Padding" Value="14,0" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{DynamicResource Text}" />
            <Setter Property="Background" Value="{DynamicResource Surface2}" />
            <Setter Property="BorderBrush" Value="{DynamicResource Border}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <Grid>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                <!-- tiny status dot -->
                                <Ellipse x:Name="Dot"
                                         Width="8" Height="8"
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Center"
                                         Margin="0,0,12,0"
                                         Fill="#55627A" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>

                            <!-- OFF (default) -->
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource Surface2}" />
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource Border}" />
                                <Setter TargetName="Dot" Property="Fill" Value="#55627A" />
                            </Trigger>

                            <!-- ON -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource Accent2}" />
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource Accent2}" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter TargetName="Dot" Property="Fill" Value="White" />
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#16233A" />
                            </Trigger>

                            <!-- Keep ON state dominant on hover -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True" />
                                    <Condition Property="IsChecked" Value="True" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource Accent}" />
                            </MultiTrigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55" />
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Height" Value="36" />
            <Setter Property="Padding" Value="14,0" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <Style TargetType="ToggleButton">
            <Setter Property="Height" Value="36" />
            <Setter Property="Padding" Value="14,0" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <Style x:Key="DashCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource Surface}" />
            <Setter Property="BorderBrush" Value="{DynamicResource Border}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="14" />
        </Style>

        <Style x:Key="DashHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{DynamicResource Text}" />
        </Style>

        <Style x:Key="DashMuted" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource Muted}" />
        </Style>

        <Style TargetType="ListView">
            <Setter Property="Background" Value="{DynamicResource Surface}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
        </Style>

        <!-- Uniform sized list items + kill default selection rectangle -->
        <Style x:Key="AlertListItemStyle" TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0,0,0,10" />
            <Setter Property="MinHeight" Value="102" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <ContentPresenter />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid Background="Transparent">

        <!-- Layout: Side panel | Alerts + Map -->
        <Grid.ColumnDefinitions>
            <!-- Keep the original side panel for command buttons/status -->
            <ColumnDefinition Width="360" />
            <ColumnDefinition Width="12" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- ================= LEFT COLUMN (Filters) ================= -->

        <Border Grid.Column="0" Style="{StaticResource DashCard}" >
            <StackPanel>

                <TextBlock Style="{StaticResource DashHeader}"
                           Text="Controls"
                           Margin="0,0,0,10" />

                <TextBlock Style="{StaticResource DashMuted}"
                           Text="Map location"
                           Margin="0,0,0,8" />

                <CheckBox Content="Use GPS Location"
                          Foreground="{DynamicResource Text}"
                          IsChecked="{Binding FilterSettings.UseNearMe}"
                          Margin="0,0,0,10" />

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="ManualLatTextBox"
                             Grid.Column="0"
                             ToolTip="Latitude"
                             Text="{Binding FilterSettings.ManualLat, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBox x:Name="ManualLonTextBox"
                             Grid.Column="2"
                             ToolTip="Longitude"
                             Text="{Binding FilterSettings.ManualLon, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>

                <Button Content="Alert Filters…"
                        Style="{StaticResource DashActionButton}"
                        Command="{x:Static ApplicationCommands.Find}"
                        Margin="0,0,0,12" />

                <Separator Margin="0,0,0,12" />
<UniformGrid Columns="2" Rows="3" Margin="0,8,0,0">

                    <Button Content="Refresh"
                            Style="{StaticResource DashActionButton}"
                            Command="{Binding RefreshCommand}"
                            Margin="0,0,8,8" />

                    <Button Content="Update Map"
                            Style="{StaticResource DashActionButton}"
                            Click="UpdateMap_OnClick"
                            Margin="0,0,0,8" />

                    <ToggleButton x:Name="FollowToggle"
                                  Content="Follow"
                                  Style="{StaticResource DashToggleButton}"
                                  IsChecked="True"
                                  Checked="FollowToggle_Checked"
                                  Unchecked="FollowToggle_Unchecked"
                                  Margin="0,0,8,8" />

                    <Button Content="Clear Trail"
                            Style="{StaticResource DashActionButton}"
                            Click="ClearTrail_OnClick"
                            Margin="0,0,0,8" />

                    <Button Content="Clear Route"
                            Style="{StaticResource DashActionButton}"
                            Click="ClearRoute_OnClick"
                            Margin="0,0,0,8" />

                    <Button Content="Save"
                            Style="{StaticResource DashActionButton}"
                            Command="{Binding SaveFiltersCommand}"
                            Margin="0,0,8,0" />

                    <ToggleButton x:Name="RadarToggle"
                                  Content="Radar"
                                  Style="{StaticResource DashToggleButton}"
                                  IsChecked="False"
                                  Checked="Radar_Checked"
                                  Unchecked="Radar_Unchecked"
                                  Margin="0,0,0,0" />
                </UniformGrid>

                <TextBlock Style="{StaticResource DashMuted}"
                           Text="{Binding StatusText}"
                           Margin="0,12,0,0" />
            </StackPanel>
        </Border>

        <!-- ================= RIGHT COLUMN (Alerts + Map) ================= -->

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="12" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- ===== Alerts ===== -->
            <Border Grid.Row="0" Style="{StaticResource DashCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" LastChildFill="False">
                        <TextBlock Style="{StaticResource DashHeader}"
                                   Text="Active Alerts"
                                   DockPanel.Dock="Left" />

                        <TextBlock Style="{StaticResource DashMuted}"
                                   DockPanel.Dock="Right"
                                   VerticalAlignment="Bottom"
                                   Text="{Binding Alerts.Count, StringFormat={}{0} total}" />
                    </DockPanel>

                    <!-- Master / Detail -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="1.25*" />
                        </Grid.ColumnDefinitions>

                        <!-- LIST -->
                        <ListView Grid.Column="0"
                                  ItemsSource="{Binding AlertsView}"
                                  SelectedItem="{Binding SelectedAlert, Mode=TwoWay}"
                                  ItemContainerStyle="{StaticResource AlertListItemStyle}">
                            <ListView.Resources>
                                <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource ThinScrollBar}" />
                            </ListView.Resources>

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource Surface2}"
                                            CornerRadius="10"
                                            Padding="0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="BorderBrush" Value="{DynamicResource Border}" />
                                                <Setter Property="BorderThickness" Value="1" />
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect BlurRadius="12" ShadowDepth="0"
                                                                          Opacity="0.22" />
                                                    </Setter.Value>
                                                </Setter>

                                                <!-- Selection: subtle background ONLY (no blue outline line) -->
                                                <Style.Triggers>
                                                    <DataTrigger
                                                        Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}"
                                                        Value="True">
                                                        <Setter Property="Background" Value="#1A263B" />
                                                        <Setter Property="BorderBrush" Value="{DynamicResource Border}" />
                                                        <Setter Property="BorderThickness" Value="1" />
                                                        <Setter Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect BlurRadius="18" ShadowDepth="0"
                                                                        Opacity="0.35" />
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="6" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Accent bar -->
                                            <Border Grid.Column="0"
                                                    Background="{DynamicResource Accent2}"
                                                    CornerRadius="10,0,0,10" />

                                            <Grid Grid.Column="1" Margin="12">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>

                                                <Grid Grid.Row="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding Event}"
                                                               FontWeight="SemiBold"
                                                               Foreground="{DynamicResource Text}"
                                                               TextTrimming="CharacterEllipsis"
                                                               Margin="0,0,10,0" />

                                                    <Border Grid.Column="1"
                                                            Background="{Binding Severity, Converter={StaticResource SeverityToBrush}}"
                                                            CornerRadius="10"
                                                            Padding="10,3"
                                                            VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Severity}"
                                                                   Foreground="White"
                                                                   FontSize="12"
                                                                   FontWeight="SemiBold" />
                                                    </Border>
                                                </Grid>

                                                <TextBlock Grid.Row="1"
                                                           Text="{Binding Headline}"
                                                           Foreground="{DynamicResource Text}"
                                                           Opacity="0.92"
                                                           Margin="0,6,0,6"
                                                           TextWrapping="Wrap"
                                                           MaxHeight="44" />

                                                <TextBlock Grid.Row="2"
                                                           Text="{Binding AreaDescription}"
                                                           Foreground="{DynamicResource Muted}"
                                                           FontSize="12"
                                                           TextTrimming="CharacterEllipsis" />
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <!-- DETAIL -->
                        <Border Grid.Column="2"
                                Background="{DynamicResource Surface2}"
                                BorderBrush="{DynamicResource Border}"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="14">
                            <ContentControl Content="{Binding SelectedAlert}">
                                <ContentControl.ContentTemplate>
                                    <DataTemplate>
                                        <!-- IMPORTANT: Explicitly disable horizontal scrolling here -->
                                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                                      HorizontalScrollBarVisibility="Disabled">
                                            <ScrollViewer.Resources>
                                                <Style TargetType="{x:Type ScrollBar}"
                                                       BasedOn="{StaticResource ThinScrollBar}" />
                                            </ScrollViewer.Resources>

                                            <StackPanel>
                                                <TextBlock Text="{Binding Event}"
                                                           FontSize="18"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource Text}" />

                                                <TextBlock Text="{Binding Headline}"
                                                           Margin="0,6,0,12"
                                                           Foreground="{DynamicResource Muted}"
                                                           TextWrapping="Wrap" />

                                                <WrapPanel Margin="0,0,0,12">
                                                    <Border
                                                        Background="{Binding Severity, Converter={StaticResource SeverityToBrush}}"
                                                        CornerRadius="10"
                                                        Padding="10,3"
                                                        Margin="0,0,8,0">
                                                        <TextBlock Text="{Binding Severity}"
                                                                   Foreground="White"
                                                                   FontWeight="SemiBold"
                                                                   FontSize="12" />
                                                    </Border>

                                                    <Border Background="{DynamicResource Accent2}"
                                                            CornerRadius="10"
                                                            Padding="10,3"
                                                            Margin="0,0,8,0">
                                                        <TextBlock Text="{Binding Urgency}"
                                                                   Foreground="White"
                                                                   FontWeight="SemiBold"
                                                                   FontSize="12" />
                                                    </Border>
                                                </WrapPanel>

                                                <TextBlock Text="{Binding AreaDescription}"
                                                           Foreground="{DynamicResource Text}"
                                                           Opacity="0.92"
                                                           TextWrapping="Wrap"
                                                           Margin="0,0,0,14" />

                                                <TextBlock Text="Description"
                                                           Foreground="{DynamicResource Text}"
                                                           FontWeight="SemiBold"
                                                           Margin="0,0,0,6" />

                                                <TextBlock Text="{Binding Description}"
                                                           Foreground="{DynamicResource Muted}"
                                                           TextWrapping="Wrap" />

                                                <TextBlock Text="Instructions"
                                                           Foreground="{DynamicResource Text}"
                                                           FontWeight="SemiBold"
                                                           Margin="0,16,0,6" />

                                                <TextBlock Text="{Binding Instruction}"
                                                           Foreground="{DynamicResource Muted}"
                                                           TextWrapping="Wrap" />
                                            </StackPanel>
                                        </ScrollViewer>
                                    </DataTemplate>
                                </ContentControl.ContentTemplate>

                                <ContentControl.Style>
                                    <Style TargetType="ContentControl">
                                        <Style.Triggers>
                                            <Trigger Property="Content" Value="{x:Null}">
                                                <Setter Property="ContentTemplate">
                                                    <Setter.Value>
                                                        <DataTemplate>
                                                            <TextBlock Text="Select an alert to view details."
                                                                       Foreground="{DynamicResource Muted}"
                                                                       VerticalAlignment="Center"
                                                                       HorizontalAlignment="Center" />
                                                        </DataTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>
                        </Border>

                    </Grid>
                </Grid>
            </Border>

            <!-- ===== Map ===== -->
            <Border Grid.Row="2"
                    Style="{StaticResource DashCard}"
                    Padding="0">
                <wv2:WebView2 x:Name="MapView" />
            </Border>

        </Grid>

    </Grid>
</UserControl>